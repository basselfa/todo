name: Deploy Frontend to Netlify

on:
  push:
    branches: [ main ]
    paths:
      - 'todo-frontend/**'
      - '.github/workflows/netlify-deploy.yml'
  pull_request:
    branches: [ main ]
    paths:
      - 'todo-frontend/**'
  workflow_dispatch: # Allow manual triggering

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest
    defaults:
      run:
        working-directory: ./todo-frontend
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v3
        with:
          fetch-depth: 0 # Fetch all history for proper deployments

      - name: Setup Node.js
        uses: actions/setup-node@v3
        with:
          node-version: '18'
          cache: 'npm'
          cache-dependency-path: 'todo-frontend/package-lock.json'
      
      - name: Install dependencies
        run: npm ci
        continue-on-error: false
      
      - name: Check for netlify.toml
        run: |
          if [ ! -f "netlify.toml" ]; then
            echo "netlify.toml not found, creating from example"
            cp netlify.toml.example netlify.toml || echo "No netlify.toml.example found either"
          fi
      
      - name: Build frontend
        run: npm run build:ci
        env:
          CI: false # Prevents treating warnings as errors
          NODE_OPTIONS: "--max_old_space_size=4096 --openssl-legacy-provider" # Fix OpenSSL issues with Node 18+
      
      - name: Debug build output
        run: ls -la build
      
      - name: Deploy to Netlify
        uses: netlify/actions/cli@master
        with:
          args: deploy --dir=./todo-frontend/build --prod
        env:
          NETLIFY_AUTH_TOKEN: ${{ secrets.NETLIFY_AUTH_TOKEN }}
          NETLIFY_SITE_ID: ${{ secrets.NETLIFY_SITE_ID }}
        
      - name: Verify deployment
        run: |
          echo "Deployment complete! Your site should be live now."
          echo "If you're experiencing issues, please check:"
          echo "1. Netlify site settings at https://app.netlify.com/sites/${{ secrets.NETLIFY_SITE_ID }}/settings/general"
          echo "2. Build logs at https://app.netlify.com/sites/${{ secrets.NETLIFY_SITE_ID }}/deploys"

        
        1